{% from '../common/macro.twig' import component %}

<!DOCTYPE html>
<html lang="{{ lang }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{{ projectName }}: {{ title }}
		</title>

		<link rel="icon" href="{{ root }}favicon.ico">
		<link href="{{ root }}styles/styles.min.css" rel="stylesheet">
		<link rel="preload" href="{{ root }}fonts/manrope-regular.woff2" as="font">
		<link rel="preload" href="{{ root }}fonts/manrope-medium.woff2" as="font">
		<link rel="preload" href="{{ root }}fonts/manrope-semibold.woff2" as="font">
		<link rel="preload" href="{{ root }}fonts/manrope-bold.woff2" as="font">
	</head>
	<body>
		<div class="page">
			{{ component('page-header', { logo: logo, mainNav: mainNav, userNav: userNav }, 'page__header') }}

			{% block main %}{% endblock %}

			{{ component('page-footer', { logo: logo, description: projectDescription, sitemap: sitemap }, 'page__footer') }}
		</div>

		{% if IS_DEV %}
			<script src="{{ root }}scripts/dev.min.js"></script>
		{% endif %}
		<script src="{{ root }}scripts/scripts.min.js"></script>
	</body>
</html>
